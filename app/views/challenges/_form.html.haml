= simple_form_for @challenge, html: {multipart: true} do |f|
  - if @challenge.errors.any?
    #errors
      %p
        = @challenge.errors.count
        Prevented this challenge from saving
      %ul
        - @challenge.errors.full_messages.each do |msg|
          %li = msg
  .panel-body
    = f.input :title, input_html: {class: 'form-control'}
    = f.input :description, input_html: {class: 'form-control'}
    = f.input :begin_period, as: :string, start_year: Time.now.year - 90, end_year: Time.now.year - 8, order: [:day, :month, :year], input_html: {class: 'form-control'}
    = f.input :end_period, as: :string, start_year: Time.now.year - 90, end_year: Time.now.year - 8, order: [:day, :month, :year], input_html: {class: 'form-control'}
    = f.input :image, input_html: {class: 'form-control'}

  = f.button :submit, class: "btn btn-primary"
